{
  "manifest_version": 3,
  "name": "Note Extension",
  "version": "1.0.0",
  "description": "Select text on any webpage and save it as notes",
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["assets/content.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Note Extension"
  },
  "web_accessible_resources": [
    {
      "resources": ["src/sidebar/sidebar-fixed.html", "src/sidebar/sidebar-apple.html", "sidebar-apple.html", "assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}